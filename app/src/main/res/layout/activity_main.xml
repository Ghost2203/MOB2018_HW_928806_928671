<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.mob2018_hw_928806_928671.ActivityMain">

    <Button
        android:id="@+id/ButtonToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ButtonToast"
        android:onClick="onClickToast"/>

    <Button
        android:id="@+id/ButtonIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickIntent"
        android:text="ButtonIntent" />

    <EditText
        android:id="@+id/main2Input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

</LinearLayout>